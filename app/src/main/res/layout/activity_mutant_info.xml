<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mutant.MutantInfo">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/viewStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Novo mutante"
            android:textAlignment="center"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/mutantPhoto"
            android:layout_width="286dp"
            android:layout_height="232dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            tools:srcCompat="@android:drawable/ic_menu_gallery" />

        <EditText
            android:id="@+id/mutantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Nome do mutante"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/mutantFirstAbility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Habilidade do mutante"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/mutantSecondAbility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/mutantThirdAbility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/saveNewMutant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salvar" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>